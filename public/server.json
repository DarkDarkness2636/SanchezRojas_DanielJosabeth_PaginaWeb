{
    "public": "public",
    "cleanUrls": false,
    "rewrites": [
        {
            "source": "/",
            "destination": "/index.html"
        },
        {
            "source": "/login",
            "destination": "/login.html"
        },
        {
            "source": "/register",
            "destination": "/register.html"
        },
        {
            "source": "/profile",
            "destination": "/profile.html"
        }
    ],
    "redirects": [
        {
            "source": "/index",
            "destination": "/",
            "type": 301
        },
        {
            "source": "/login.html",
            "destination": "/login",
            "type": 301
        },
        {
            "source": "/register.html",
            "destination": "/register",
            "type": 301
        }
    ],
    "headers": [
        {
            "source": "**/*.@(html|htm)",
            "headers": [
                {
                    "key": "Cache-Control",
                    "value": "no-store, no-cache, must-revalidate"
                }
            ]
        },
        {
            "source": "/**",
            "headers": [
                {
                    "key": "X-Frame-Options",
                    "value": "DENY"
                },
                {
                    "key": "X-Content-Type-Options",
                    "value": "nosniff"
                }
            ]
        }
    ]
}